<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/arial</item>

    </style>

    <style name="Toolbar.Agenda" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/arial</item>
        <item name="textAllCaps">false</item>
        <!--<item name="tabGravity">center</item>-->
        <!--<item name="tabMode">fixed</item>-->
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark
        </item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorPrimary
        </item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>

    <style name="AppTabLayout2" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/YourTextAppareance</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="YourTextAppareance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/arial</item>
    </style>

    <style name="MyCustomTextAppearance2" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/arial</item>
    </style>

</resources>
