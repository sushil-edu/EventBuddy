<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <com.pkmmte.view.CircularImageView
                    android:id="@+id/profileIv"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:src="@drawable/ic_user" />


            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Sushil Kumar"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />
            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/designationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Android Developer"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />
            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/organizationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Kestone IMS"
                android:layout_marginTop="2dp"
                android:textSize="13sp" />

            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/detailsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center_horizontal"/>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"/>


            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/mScheduleBtn"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:text="Schedule Meeting"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal">
        <in.kestone.eventbuddy.widgets.CustomTextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <in.kestone.eventbuddy.widgets.CustomTextView
            android:id="@+id/tvReschedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Reschedule"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"/>
    </LinearLayout>
</RelativeLayout>
