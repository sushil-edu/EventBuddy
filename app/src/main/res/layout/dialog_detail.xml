<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">
    <in.kestone.eventbuddy.widgets.CustomTextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Log Out"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_16sp"
        tools:ignore="MissingPrefix" />

    <in.kestone.eventbuddy.widgets.CustomTextView
        android:id="@+id/bodyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you sure you want to clear \n Log Out ?"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_10dp"/>

    <in.kestone.eventbuddy.widgets.CustomTextView
        android:id="@+id/bodyTvBreaf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Are you sure you want to clear \n Log Out ?"
        android:textSize="@dimen/dimen_16sp"
        android:layout_marginTop="@dimen/dimen_10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <in.kestone.eventbuddy.widgets.CustomTextView
            android:id="@+id/yes"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_design_solid"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>
</LinearLayout>