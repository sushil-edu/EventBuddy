<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <in.kestone.eventbuddy.widgets.CustomBoldTextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    />

                <in.kestone.eventbuddy.widgets.CustomBoldTextView
                    android:id="@+id/tvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wed"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_marginTop="-6dp"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:padding="5dp">

                <in.kestone.eventbuddy.widgets.CustomBoldTextView
                    android:id="@+id/timeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17 Hrs 00 Min"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <in.kestone.eventbuddy.widgets.CustomBoldTextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prashant Agarwal"
                        android:textColor="@color/colorPrimary"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:background="@color/bg_grey"
                        android:layout_gravity="center_vertical" />


                    <in.kestone.eventbuddy.widgets.CustomTextView
                        android:id="@+id/desigTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Architect"
                        android:textSize="12sp" />


                </LinearLayout>

                <in.kestone.eventbuddy.widgets.CustomTextView
                    android:id="@+id/orgTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="ABC Ltd."
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/bg_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingStart="-5dp">


                    <in.kestone.eventbuddy.widgets.CustomTextView
                        android:id="@+id/dateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01 Nov"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone" />


                    <in.kestone.eventbuddy.widgets.CustomTextView
                        android:id="@+id/networkingCommentTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_notes"
                        android:gravity="center_vertical"
                        android:text="Comment"
                        android:textColor="@color/colorPrimary"
                        android:drawablePadding="@dimen/padding_5"
                        android:textSize="12sp" />

                    <in.kestone.eventbuddy.widgets.CustomTextView
                        android:id="@+id/locationTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_place_black_24dp"
                        android:drawablePadding="@dimen/padding_5"
                        android:gravity="center_vertical"
                        android:text="Location"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="@dimen/padding_5">

                <in.kestone.eventbuddy.widgets.CustomTextView
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <in.kestone.eventbuddy.widgets.CustomTextView
                    android:id="@+id/btnReschedule"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Reschedule"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>