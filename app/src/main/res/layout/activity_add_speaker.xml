<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">
    <!--Toolbar-->

    <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include layout="@layout/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/dimen_20dp">

        <LinearLayout
            android:id="@+id/layout_speaker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.kestone.eventbuddy.widgets.CustomEditText
                android:id="@+id/et_speaker_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Speaker Name"
                android:singleLine="true"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="-4dp"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_speaker_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.kestone.eventbuddy.widgets.CustomEditText
                android:id="@+id/et_speaker_designation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Designation"
                android:singleLine="true"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="-4dp"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_speaker_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.kestone.eventbuddy.widgets.CustomEditText
                android:id="@+id/et_speaker_organization"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Organization"
                android:singleLine="true"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="-4dp"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_speaker_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.kestone.eventbuddy.widgets.CustomEditText
                android:id="@+id/et_speaker_bio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Bio"
                android:singleLine="true"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="-4dp"
                android:background="@color/grey" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/solid_button_effect"
            android:elevation="4dp"
            android:gravity="center">

            <in.kestone.eventbuddy.widgets.CustomTextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>