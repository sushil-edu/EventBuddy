<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">

    <FrameLayout
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp">

        <ImageView
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_gravity="center"
            android:src="@drawable/tick_inside_a_circle"
            android:tint="@color/colorPrimary"/>
    </FrameLayout>

    <TextView
        android:id="@+id/titleTv"
        fontPath="fonts/medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center"
        android:text="Log Out"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_16sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/bodyTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:gravity="center"
        android:text="Are you sure you want to clear \n Log Out ?"
        android:textSize="@dimen/dimen_16sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/btn_design_stroke"
            android:gravity="center"
            android:text="No"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_16sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/yes"
            android:layout_width="@dimen/Dialog_Button_Width"
            android:layout_height="@dimen/Dialog_Button_Height"
            android:layout_margin="5dp"
            android:background="@drawable/solid_button_effect"
            android:gravity="center"
            android:text="Yes"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/dimen_16sp"
            />

    </LinearLayout>
</LinearLayout>